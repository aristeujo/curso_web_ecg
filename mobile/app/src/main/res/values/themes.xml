<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.CursoECG" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color_variant</item>
        
        <item   name="android:actionBarStyle">@style/CustomActionBar</item>
        <item   name="android:windowLightStatusBar">true</item>
    </style>
    
    <style name="CustomActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="android:background">@color/primary_color</item>
        <item name="android:titleTextStyle">@style/ActionBarTitle</item>
    </style>

    <style name="ActionBarTitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>